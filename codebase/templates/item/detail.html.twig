        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="https://via.placeholder.com/600x400" alt="{{ item.sku }}" class="img-fluid">
            </div>
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">{{ item.sku }}</h1>
                <h2>{{ item.price }} â‚¬</h2>
                <hr>

                <form class="mt-4 p-4 bg-light" method="post">
